<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/widget" />
        <Constraint
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toBottomOf="@+id/teamTitle"
            android:layout_marginStart="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/recyclerview" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/widget" />
        <Constraint
            android:id="@+id/bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <Constraint
            android:id="@+id/team1LogoCard"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/vs"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/team1Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/team1LogoCard"
            app:layout_constraintStart_toStartOf="@+id/team1LogoCard"
            app:layout_constraintTop_toBottomOf="@+id/team1LogoCard">
            <PropertySet
                android:alpha="0"
                app:motionProgress="10" />
        </Constraint>

        <Constraint
            android:id="@+id/team2Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/team1Name"
            app:layout_constraintEnd_toEndOf="@+id/team2Logo"
            app:layout_constraintStart_toStartOf="@+id/team2Logo">
            <PropertySet
                android:alpha="0"
                app:motionProgress="10" />
        </Constraint>
        <Constraint
            android:id="@+id/matchDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tournamentTitle" />


    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start">
        <OnSwipe
            app:dragDirection="dragUp"
            app:onTouchUp="stop"
            app:touchAnchorId="@+id/recyclerview" />
    </Transition>
</MotionScene>



