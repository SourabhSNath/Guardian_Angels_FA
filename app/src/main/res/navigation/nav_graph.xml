<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.guardianangels.football.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_home_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_home_to_matchListFragment"
            app:destination="@id/matchListFragment" />
        <action
            android:id="@+id/action_home_to_matchDetailsFragment"
            app:destination="@id/matchDetailsFragment" />
        <action
            android:id="@+id/action_home_to_addUpcomingMatchFragment"
            app:destination="@id/addUpcomingMatchFragment" />
        <argument
            android:name="is_match_completed"
            app:argType="boolean" />
        <action
            android:id="@+id/action_home_to_completedMatchFragment"
            app:destination="@id/completedMatchDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/players"
        android:name="com.guardianangels.football.ui.players.playerlist.PlayerListFragment"
        android:label="Players"
        tools:layout="@layout/player_list_fragment">
        <action
            android:id="@+id/action_players_to_addPlayerFragment"
            app:destination="@id/addPlayerFragment" />
        <action
            android:id="@+id/action_players_to_playerDetailsFragment"
            app:destination="@id/playerDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/addPlayerFragment"
        android:name="com.guardianangels.football.ui.players.addplayer.AddPlayerFragment"
        android:label="Add Player"
        tools:layout="@layout/add_player_fragment">
        <argument
            android:name="player"
            android:defaultValue="@null"
            app:argType="com.guardianangels.football.data.Player"
            app:nullable="true" />

        <!--
          * This is to pass the updated player back to details fragment when navigating back
        -->
        <action
            android:id="@+id/action_addPlayerFragment_to_playerDetailsFragment"
            app:destination="@id/playerDetailsFragment"
            app:popUpTo="@id/playerDetailsFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.guardianangels.football.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/login_fragment" />
    <fragment
        android:id="@+id/playerDetailsFragment"
        android:name="com.guardianangels.football.ui.players.details.PlayerDetailsFragment"
        android:label="PlayerDetailsFragment"
        tools:layout="@layout/player_details_fragment">
        <argument
            android:name="playerModel"
            app:argType="com.guardianangels.football.data.Player" />
        <action
            android:id="@+id/action_playerDetailsFragment_to_addPlayerFragment"
            app:destination="@id/addPlayerFragment" />
    </fragment>

    <fragment
        android:id="@+id/addUpcomingMatchFragment"
        android:name="com.guardianangels.football.ui.match.addmatch.AddUpcomingMatchFragment"
        android:label="AddUpcomingMatchFragment"
        tools:layout="@layout/add_upcoming_match_fragment">
        <action
            android:id="@+id/action_addUpcomingMatchFragment_to_matchPlayerListFragment"
            app:destination="@id/matchSelectPlayersFragment" />
        <argument
            android:name="matchData"
            android:defaultValue="@null"
            app:argType="com.guardianangels.football.data.Match"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/matchSelectPlayersFragment"
        android:name="com.guardianangels.football.ui.match.addmatch.MatchSelectPlayersFragment"
        android:label="MatchPlayerListFragment"
        tools:layout="@layout/player_list_fragment">
        <argument
            android:name="playerList"
            app:argType="com.guardianangels.football.data.Player[]" />
    </fragment>

    <fragment
        android:id="@+id/matchDetailsFragment"
        android:name="com.guardianangels.football.ui.match.details.MatchDetailsFragment"
        android:label="MatchDetailsFragment"
        tools:layout="@layout/match_details_fragment">
        <argument
            android:name="matchInfo"
            app:argType="com.guardianangels.football.data.Match" />
        <action
            android:id="@+id/action_matchDetailsFragment_to_addUpcomingMatchFragment"
            app:destination="@id/addUpcomingMatchFragment" />
        <action
            android:id="@+id/action_matchDetailsFragment_to_updateCompletedMatchFragment"
            app:destination="@id/updateCompletedMatchFragment" />
    </fragment>

    <fragment
        android:id="@+id/matchListFragment"
        android:name="com.guardianangels.football.ui.match.upcomingmatches.MatchListFragment"
        android:label="MatchListFragment"
        tools:layout="@layout/match_list_fragment">
        <action
            android:id="@+id/action_matchListFragment_to_addUpcomingMatchFragment"
            app:destination="@id/addUpcomingMatchFragment" />
        <action
            android:id="@+id/action_matchListFragment_to_matchDetailsFragment"
            app:destination="@id/matchDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/updateCompletedMatchFragment"
        android:name="com.guardianangels.football.ui.match.overview.UpdateCompletedMatchFragment"
        android:label="UpdateCompletedMatchFragment"
        tools:layout="@layout/update_completed_match_fragment">
        <argument
            android:name="match"
            app:argType="com.guardianangels.football.data.Match" />
        <action
            android:id="@+id/action_updateCompletedMatchFragment_to_updateTeamPlayersFragment"
            app:destination="@id/updateTeamPlayersFragment" />
        <action
            android:id="@+id/action_updateCompletedMatchFragment_to_home"
            app:destination="@id/home"
            app:popUpTo="@id/home"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_updateCompletedMatchFragment_to_completedMatchDetailsFragment"
            app:destination="@id/completedMatchDetailsFragment"
            app:popUpTo="@id/completedMatchDetailsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/updateTeamPlayersFragment"
        android:name="com.guardianangels.football.ui.match.overview.UpdateTeamPlayersFragment"
        android:label="UpdateTeamPlayersFragment"
        tools:layout="@layout/update_team_players_fragment">
        <argument
            android:name="ids"
            app:argType="string[]" />
        <action
            android:id="@+id/action_updateTeamPlayersFragment_to_home"
            app:destination="@id/home"
            app:popUpTo="@id/home"
            app:popUpToInclusive="true" />
        <argument
            android:name="isWin"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/completedMatchDetailsFragment"
        android:name="com.guardianangels.football.ui.match.completedmatches.CompletedMatchDetailsFragment"
        android:label="CompletedMatchDetailsFragment"
        tools:layout="@layout/completed_match_details_fragment">
        <argument
            android:name="match"
            app:argType="com.guardianangels.football.data.Match" />
        <action
            android:id="@+id/action_completedMatchFragment_to_updateCompletedMatchFragment"
            app:destination="@id/updateCompletedMatchFragment" />
    </fragment>

</navigation>