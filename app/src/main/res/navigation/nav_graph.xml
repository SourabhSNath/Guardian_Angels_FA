<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.gaurdianangels.football.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_home_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_home_to_addUpcomingMatchFragment"
            app:destination="@id/addUpcomingMatchFragment" />
    </fragment>

    <fragment
        android:id="@+id/players"
        android:name="com.gaurdianangels.football.ui.players.playerlist.PlayerListFragment"
        android:label="Players"
        tools:layout="@layout/player_list_fragment">
        <action
            android:id="@+id/action_players_to_addPlayerFragment"
            app:destination="@id/addPlayerFragment" />
        <action
            android:id="@+id/action_players_to_playerDetailsFragment"
            app:destination="@id/playerDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/addPlayerFragment"
        android:name="com.gaurdianangels.football.ui.players.addplayer.AddPlayerFragment"
        android:label="Add Player"
        tools:layout="@layout/add_player_fragment">
        <argument
            android:name="player"
            android:defaultValue="@null"
            app:argType="com.gaurdianangels.football.data.Player"
            app:nullable="true" />

        <!--
          * This is to pass the updated player back to details fragment when navigating back
        -->
        <action
            android:id="@+id/action_addPlayerFragment_to_playerDetailsFragment"
            app:destination="@id/playerDetailsFragment"
            app:popUpTo="@id/playerDetailsFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.gaurdianangels.football.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/login_fragment" />
    <fragment
        android:id="@+id/playerDetailsFragment"
        android:name="com.gaurdianangels.football.ui.players.details.PlayerDetailsFragment"
        android:label="PlayerDetailsFragment"
        tools:layout="@layout/player_details_fragment">
        <argument
            android:name="playerModel"
            app:argType="com.gaurdianangels.football.data.Player" />
        <action
            android:id="@+id/action_playerDetailsFragment_to_addPlayerFragment"
            app:destination="@id/addPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/addUpcomingMatchFragment"
        android:name="com.gaurdianangels.football.ui.matches.AddUpcomingMatchFragment"
        android:label="AddUpcomingMatchFragment"
        tools:layout="@layout/add_upcoming_match_fragment">
        <action
            android:id="@+id/action_addUpcomingMatchFragment_to_selectTeamFragment"
            app:destination="@id/selectTeamFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectTeamFragment"
        android:name="com.gaurdianangels.football.ui.matches.SelectTeamFragment"
        android:label="SelectTeamFragment"
        tools:layout="@layout/player_list_fragment" />

</navigation>