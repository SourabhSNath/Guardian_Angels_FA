<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.GaurdianAngelsFA" parent="Theme.MaterialComponents.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/layoutGradientStart</item>

        <!-- Window Background gradient -->
        <item name="android:windowBackground">@drawable/main_layout_gradient</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/layoutGradientEnd</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/bottomNavColor</item>

        <item name="colorOnPrimary">@color/white</item>  <!--Activated State-->
        <item name="colorOnSurface">@color/white</item>  <!--Focused State-->

        <item name="textInputStyle">@style/TextInputStyle</item>

        <!-- Popup Options Menu Style -->
        <item name="textAppearanceLargePopupMenu">@style/PopupMenuTextStyle</item>
        <item name="textAppearanceSmallPopupMenu">@style/PopupMenuTextStyle</item>
        <item name="popupMenuBackground">@drawable/custom_popup_bg</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>


    <!-- Component Style -->
    <style name="IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="rippleColor">?colorOnPrimary</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyTextStyle</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>"
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>

    <!-- Shape styles -->
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- ShapeableImageView -->
    <!-- For round imageView-->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Bottom Rounded corners -->
    <style name="BottomRoundedShapeableImageView">
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TitleTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="MainTotalCardTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="CountTextStyle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="BottomNavigationBarTextStyle">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="PopupMenuTextStyle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/raleway</item>
        <item name="android:fontFamily">@font/raleway</item>
    </style>

    <style name="DialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="DialogBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>